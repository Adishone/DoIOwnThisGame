{

  "manifest_version": 2,
  "name": "Do I own this game?",
  "version": "1.1",

  "description": "Checks if you already own games that are in viewed bundles. Works for steam library on Humble Bundle, IndieGala and Fanatical.",

  "icons": {
    "48": "icons/do_i_own_this_game_icon.svg",
	  "96": "icons/do_i_own_this_game_icon.svg"
  },
  
  "permissions": [
	  "storage",
	  "https://api.steampowered.com/*"
	],

  "browser_specific_settings": {
    "gecko": {
      "id": "doiownthisgame@doiownthisgame.com"
    }
  },

  "browser_action": {
    "default_icon": "icons/do_i_own_this_game_icon.svg",
    "default_title": "Do I own this game?",
    "default_popup": "popup/menu.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*.humblebundle.com/games/*"],
      "js": ["steamConnect.js", "numberSummary.js", "humbleBundle.js"]
    },
	{
      "matches": ["*://*.fanatical.com/*/bundle/*", "*://*.fanatical.com/*/pick-and-mix/*"],
      "js": ["steamConnect.js", "numberSummary.js", "fanatical.js"]
    },
	{
      "matches": ["*://*.indiegala.com/bundle/*"],
      "js": ["steamConnect.js", "numberSummary.js", "indieGala.js"]
    }
  ],
  
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  }
}